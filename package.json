{
  "name": "ut-workshop",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "commit": "git-cz"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-angular": "^16.2.3",
    "@nrwl/angular": "^14.0.2",
    "@nrwl/cli": "14.0.2",
    "@nrwl/workspace": "14.0.2",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "nx": "14.0.2",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "typescript": "~4.6.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
